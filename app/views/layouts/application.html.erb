<!DOCTYPE html>
<html>
<head>
  <title>Goldengrove</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Make this Haml somehow -->
<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <%= link_to 'Goldengrove', '/' %>
    </li>
    <li class="toggle-topbar menu-icon">
      <a href="#"><span>Menu</span></a>
    </li>
  </ul>

  <section class="top-bar-section">

    <!-- Right Nav Section -->
    <ul class="right">
      <% if current_user %>
        <li>
          <%= link_to current_user.twitter_handle, profile_path(current_user.id) %>
        </li>
        <li>
          <%= link_to 'Sign out', signout_path %>
        </li>
      <% else %>
        <li>
          <%= link_to 'Sign in with Twitter', '/auth/twitter' %>
        </li>
      <% end %>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
      <li><a href="#"><%= link_to 'Salon', '/poems' %></a></li>
      <li><a href="#"><%= link_to 'Create', '/poems/new' %></a></li>
      <li><a href="#"><%= link_to 'About', '/about' %></a></li>
    </ul>

  </section>

</nav>

<%= yield %>

</body>
</html>
